@if (this.User.Identity.IsAuthenticated)
{
    <h2>Insufficient Privileges</h2>
    <br />
    if (!String.IsNullOrEmpty(this.User.Identity.Name))
    {
        <p>Hi @this.User.Identity.Name,</p>
        <p class="red">You are logged in, but have insufficient privileges to access the requested site.</p>
        <p>Please request access from your system administrator or use a different account.</p>
    }
    else
    {
        <p class="red">You are logged in, but have insufficient privileges to access the requested site.</p>
        <p>Please request access from your system administrator or use a different account.</p>
    }
}
else
{
    <h2>Altis Common Login</h2>
    <p>Welcome to the Altis Common Login site.</p>
    <p class="red">You are not currently logged in.</p>
    <input type="button" class="green" value="Log in" onclick="location.href = '/Account/Login'" />
}